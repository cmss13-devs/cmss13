/datum/admins/proc/topic_inviews(var/href)
	switch(href)
		if("rejuvenateall")
			owner.rejuvenate_all_in_view()
		if("rejuvenatemarine")
			owner.rejuvenate_all_humans_in_view()
		if("rejuvenaterevivemarine")
			owner.rejuvenate_all_revivable_humans_in_view()
		if("rejuvenatexeno")
			owner.rejuvenate_all_xenos_in_view()
		if("sleepall")
			sleepall()
		if("wakeall")
			wakeall()
		if("directnarrateall")
			directnarrateall()
		if("subtlemessageall")
			subtlemessageall()
		if("alertall")
			alertall()
