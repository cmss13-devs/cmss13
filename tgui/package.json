{
  "private": true,
  "name": "tgui-workspace",
  "version": "6.0.0",
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tgui:analyze": "rspack --analyze",
    "tgui:build": "rspack build",
    "tgui:dev": "bun packages/tgui-dev-server/index.ts",
    "tgui:lint": "eslint packages --ext .js,.jsx,.cjs,.ts,.tsx",
    "tgui:prettier": "prettier --check .",
    "tgui:test": "bun test",
    "tgui:tsc": "tsc",
    "tgui:prettier-fix": "prettier --write .",
    "tgui:eslint-fix": "eslint --fix packages --ext .js,.jsx,.cjs,.ts,.jsx,.tsx"
  },
  "dependencies": {
    "@rspack/cli": "^1.4.3",
    "@rspack/core": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@typescript-eslint/utils": "^8.28.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.89.2",
    "sass-loader": "^16.0.5",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.7",
    "@swc/register": "^0.1.10",
    "@types/bun": "^1.2.14",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/webpack-env": "^1.18.8",
    "@types/wicg-file-system-access": "^2023.10.6",
    "jsdom": "^26.1.0"
  }
}
